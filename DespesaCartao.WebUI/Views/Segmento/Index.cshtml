@model IEnumerable<DespesaCartao.Domain.Entities.Segmento>

@{
    ViewBag.Title = "Segmentos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Segmento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Nome, "Edit", new { item.SegmentoID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @using (Html.BeginForm("Delete"))
            {
                @Html.Hidden("segmentoId", item.SegmentoID)
                <input type="submit" value="Excluir" />
            }
        </td>
    </tr>
}

</table>
